#!/bin/bash

if [[ -n $1 ]]; then
	workspace="-data $1"
elif [[ -n $ECLIPSE_WORKSPACE ]]; then
	workspace="-data $ECLIPSE_WORKSPACE"
elif [[ -d ~/Workspace/eclipse/neon ]]; then
	workspace="-data $HOME/Workspace/eclipse/neon"
fi

AUTHOR="$(git config --get user.name) ($(git config --get user.email))"

$HOME/bin/eclipse $workspace -vmargs -Duser.name="$AUTHOR" -Xmx512M&
